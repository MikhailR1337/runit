{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "HEROKU",
        "buildCommand": "make install build"
    },
    "deploy": {
        "numReplicas": 1,
        "startCommand": "make db-migrate start-prod",
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 10
    }
}